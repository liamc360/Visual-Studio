@{
    ViewBag.Title = "JsonView";
}

<div><b>Table Format Data Displaying Using Jquery</b><br /></div>

<div>
    <table class="table table-bordered table-responsive table-hover" id="tblEmployee">
        <tr>
            <th>Employee Id </th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Birth Date</th>
            <th>Hire Date</th>
        </tr>

    </table>
</div>
<script src="~/Scripts/jquery-3.2.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GetEmployeeData();
    });
    function GetEmployeeData() { 
        $.get('/Tables/EmployeeData/M', {}, function (data) {
            var tblEmployee = $("#tblEmployee");
            $.each(data, function (index, item) {
                var tr = $("<tr></tr>");
                tr.html(("<td>"+item.EmpNo+"</td>")
                + " " + ("<td>" + item.FirstName + "</td>")
                + " " + ("<td>" + item.LastName + "</td>")
                + " " + ("<td>" + item.Gender + "</td>")
                + " " + ("<td>" + item.BirthDate + "</td>")
                + " " + ("<td>" + item.HireDate + "</td>"));
                tblEmployee.append(tr);
            });
        });
    } 
</script>